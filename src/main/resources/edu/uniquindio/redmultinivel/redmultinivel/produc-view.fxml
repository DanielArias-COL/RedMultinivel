<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPanePrincipal" prefHeight="250.0" prefWidth="250.0" style="-fx-background-color: ;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.uniquindio.redmultinivel.redmultinivel.controller.ProductMainController">
   <children>
      <VBox layoutX="0.0" layoutY="0.0" prefHeight="250.0" prefWidth="250.0" spacing="10.0" alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Sección del Nombre y Precio -->
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label fx:id="labelName" text="Name">
                     <font>
                        <Font name="Arial Black" size="11.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelPrecio" text="\$0.0" />
               </children>
            </HBox>

            <!-- Imagen del Producto -->
            <ImageView fx:id="imageProducto" fitHeight="115.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" />

            <!-- Controles de Cantidad -->
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="textCantidad" editable="false" prefWidth="50.0" />
                  <Button fx:id="buttonDecremento" mnemonicParsing="false" onAction="#DecrementarCantidad" prefWidth="30.0">
                     <graphic>
                        <FontAwesomeIcon glyphName="MINUS" />
                     </graphic>
                  </Button>
                  <Button fx:id="buttonIncremento" mnemonicParsing="false" onAction="#incrementarCantidad" prefWidth="30.0">
                     <graphic>
                        <FontAwesomeIcon glyphName="PLUS" />
                     </graphic>
                  </Button>
               </children>
            </HBox>

            <!-- Botón de Agregar al Carrito -->
            <Button fx:id="buttonAgregar" mnemonicParsing="false" onAction="#AgregarAlCarrito" styleClass="buttoncompra" stylesheets="@../../../../css/fullpackstyling.css" text="Agregar" textFill="#f5f5f5">
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
